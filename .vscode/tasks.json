{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-I/opt/homebrew/Cellar/sfml/2.6.2/include",   // SFML include path
                "-L/opt/homebrew/Cellar/sfml/2.6.2/lib",       // SFML lib path
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",  // Optional: if you're using SFML Audio
                "src/main.cpp",
                "-o",
                "build/MysteryMaze"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
